<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">@dimen/actionBarSize</item>
    </style>

    <style name="BaseAppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LargeTitleText">
        <item name="android:textSize">@dimen/text_size_39dp</item>
        <item name="android:textColor">@color/color_17171b</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CourseTabLayout" parent="Widget.Design.TabLayout" />

    <style name="Widget.Design.TabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <item name="tabMaxWidth">264dp</item>
        <item name="tabIndicatorColor">@color/color_007aff</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">@null</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/color_007aff</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_19dp</item>
        <item name="android:textColor">@color/color_17171b</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
