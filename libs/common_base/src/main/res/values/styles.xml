<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarSize">@dimen/actionBarSize</item>
        <item name="android:windowBackground">@color/color_ffffff</item>
    </style>

    <style name="BaseAppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LargeTitleText">
        <item name="android:textSize">@dimen/text_size_39dp</item>
        <item name="android:textColor">@color/color_17171b</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
