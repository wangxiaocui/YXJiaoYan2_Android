<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_007aff</item>
        <item name="android:actionBarSize">@dimen/actionBarSize</item>
    </style>

    <style name="BaseAppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="LargeTitleText">
        <item name="android:textSize">@dimen/text_size_39dp</item>
        <item name="android:textColor">@color/color_17171b</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JiaoYan.TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_19dp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="CertVerifySubTitleText">
        <item name="android:textSize">@dimen/text_size_21dp</item>
        <item name="android:textColor">@color/color_17171b</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="CertVerifyHintText">
        <item name="android:textSize">@dimen/text_size_16dp</item>
        <item name="android:textColor">@color/color_a6a5ab</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="CertVerifySubmitText">
        <item name="android:textSize">@dimen/text_size_16dp</item>
        <item name="android:textColor">@color/color_ffffff</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_style_001_bg_selector</item>
    </style>

    <style name="CertVerifyCancelText">
        <item name="android:textSize">@dimen/text_size_16dp</item>
        <item name="android:textColor">@color/color_17171b</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
