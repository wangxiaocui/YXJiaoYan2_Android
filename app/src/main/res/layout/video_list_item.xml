<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="135dp"
        android:layout_height="wrap_content">

        <com.yanxiu.lib.yx_basic_library.customize.view.RoundCornerImageView
            android:id="@+id/iv_img"
            android:layout_width="135dp"
            android:layout_height="76dp"
            android:scaleType="fitXY"
            app:corner_size="3dp" />

        <ImageView
            android:id="@+id/iv_mask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_img"
            android:layout_alignLeft="@+id/iv_img"
            android:layout_alignRight="@+id/iv_img"
            android:layout_alignTop="@+id/iv_img"
            android:background="@drawable/video_list_item_mask_learning_shape" />

        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="第一节课撒大声地阿斯顿阿达阿斯顿"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_14dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_video_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="学习中"
        android:textColor="@color/color_007aff"
        android:textSize="@dimen/text_size_14dp" />


</RelativeLayout>