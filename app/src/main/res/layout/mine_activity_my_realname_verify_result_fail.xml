<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.yanxiu.gphone.jiaoyan.business.mine.cert_verify.MineMyCertVerifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
        android:textSize="@dimen/text_size_39dp"
        android:textColor="@color/color_fe8686"
       android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="对不起！" />

        <TextView
            style="@style/CertVerifySubTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="审核未通过，请重新上传" />

        <TextView
            android:id="@+id/tv_fail_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/text_size_16dp"
            android:textColor="@color/color_a6a5ab"
            android:text="@string/cert_fail_reason" />

        <ImageView
            android:id="@+id/iv_identity_front"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="#ff0000" />

        <ImageView
            android:id="@+id/iv_identity_back"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#ff0000" />

        <TextView
            style="@style/CertVerifyHintText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text= "@string/realname_verify_hint" />

        <TextView
            android:id="@+id/tv_cert_submit"
            style="@style/CertVerifySubmitText"
            android:layout_marginTop="52dp"
            android:text= "@string/cert_submit"/>

        <TextView
            android:id="@+id/tv_cert_cancel"
            style="@style/CertVerifyCancelText"
            android:layout_marginTop="52dp"
            android:text= "@string/cert_cancel"/>
    </LinearLayout>
</ScrollView>