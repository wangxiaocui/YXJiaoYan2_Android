<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.yanxiu.gphone.jiaoyan.business.mine.cert_verify.MineMyCertVerifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">
        <TextView
            style="@style/LargeTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="资质认证" />

            <ImageView
                android:id="@+id/iv_cert_verify_guide"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="#ff0000" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/color_a6a5ab"
            android:textSize="12dp"
            android:text="当前荣誉值" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_17171b"
                android:textSize="40dp"
                android:text="259" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_ffffff"
                android:textSize="12dp"
                android:background="@drawable/mine_cert_verify_title_normal_shape"
                android:text=" 知名专家 " />
        </LinearLayout>
        <!-- 实名认证 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="38dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_17171b"
                android:textSize="@dimen/text_size_18dp"
                android:layout_centerVertical="true"
                android:text="实名认证" />

            <TextView
                android:id="@+id/tv_realname_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_007aff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_cert_verify_action_normal_shape"
                android:text="立即认证" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_realname_verify"
              android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_a6a5ab"
                android:textSize="14dp"
                android:text="待审核" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f0f1f3" />

        <!-- 教师资格证 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_17171b"
                android:textSize="@dimen/text_size_18dp"
                android:layout_centerVertical="true"
                android:text="教师资格证" />

            <TextView
                android:id="@+id/tv_teacher_cert_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_007aff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_cert_verify_action_normal_shape"
                android:text="立即认证" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_teacher_cert_verify"
              android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_a6a5ab"
                android:textSize="14dp"
                android:text="待审核" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f0f1f3" />

        <!-- 教研员 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_17171b"
                android:textSize="@dimen/text_size_18dp"
              android:layout_centerVertical="true"
                android:text="教研员" />

            <TextView
                android:id="@+id/tv_professor_cert_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="15dp"
              android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_007aff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_cert_verify_action_normal_shape"
                android:text="立即认证" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_professor_cert_verify"
              android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_a6a5ab"
                android:textSize="14dp"
                android:text="待审核" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f0f1f3" />

        <!-- 学历认证 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_17171b"
                android:textSize="@dimen/text_size_18dp"
              android:layout_centerVertical="true"
                android:text="学历认证" />

            <TextView
                android:id="@+id/tv_education_cert_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_007aff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_cert_verify_action_normal_shape"
                android:text="立即认证" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_education_cert_verify"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_a6a5ab"
                android:textSize="14dp"
                android:text="待审核" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f0f1f3" />

        <!-- 职称证书 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_17171b"
                android:textSize="@dimen/text_size_18dp"
              android:layout_centerVertical="true"
                android:text="职称证书" />

            <TextView
                android:id="@+id/tv_tech_cert_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_007aff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_cert_verify_action_normal_shape"
                android:text="立即认证" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_tech_cert_verify"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_a6a5ab"
                android:textSize="14dp"
                android:text="待审核" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f0f1f3" />

        <!-- 荣誉证书 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_17171b"
                android:textSize="@dimen/text_size_18dp"
              android:layout_centerVertical="true"
                android:text="荣誉证书" />

            <TextView
                android:id="@+id/tv_prize_cert_verify"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_007aff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/mine_cert_verify_action_normal_shape"
                android:text="立即认证" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/tv_prize_cert_verify"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/color_a6a5ab"
                android:textSize="14dp"
                android:text="待审核" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#f0f1f3" />

    </LinearLayout>
</ScrollView>