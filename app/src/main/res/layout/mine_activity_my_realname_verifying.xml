<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.yanxiu.gphone.jiaoyan.business.mine.cert_verify.MineMyCertVerifyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="@dimen/text_size_39dp"
            android:textColor="@color/color_17171b"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="审核中！" />

        <TextView
            style="@style/CertVerifySubTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="请耐心等待..." />


        <ImageView
            android:id="@+id/iv_identity_front"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="#ff0000" />

        <ImageView
            android:id="@+id/iv_identity_back"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#ff0000" />
    </LinearLayout>
</ScrollView>