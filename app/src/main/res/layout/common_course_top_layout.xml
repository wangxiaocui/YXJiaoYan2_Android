<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp">

    <ImageView
        android:id="@+id/iv_course_cover"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentTop="true"
        android:background="#ff0000" />

    <LinearLayout
        android:layout_alignBottom="@id/iv_course_cover"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#3d000000">

        <TextView
            android:id="@+id/tv_speaker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:maxLines="1"
            android:text="主讲：孙长龙" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:maxLines="1"
            android:text="9课时(360分钟)" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:textColor="@color/color_17171b"
        android:textSize="@dimen/text_size_18dp"
        android:ellipsize="end"
        android:text="如何把握英语课程中各种任务群的关系如何把握英语课程中的各种任务群" />
</RelativeLayout>