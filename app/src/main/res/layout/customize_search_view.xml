<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_cancel">

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/course_search_button_bg_shape"
            android:ellipsize="start"
            android:gravity="left|center_vertical"
            android:hint="输入要搜索的内容..."
            android:imeOptions="actionSearch"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:singleLine="true"
            android:textColor="@color/color_17171b"
            android:textColorHint="@color/color_a6a5ab"
            android:textSize="@dimen/text_size_16dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="#ff0000" />

        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="5dp"
            android:background="#ff0000"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_007aff"
        android:textSize="@dimen/text_size_18dp" />
</RelativeLayout>