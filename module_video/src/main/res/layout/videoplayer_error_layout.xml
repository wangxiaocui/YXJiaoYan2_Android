<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/color_334466"
    android:orientation="vertical">


    <TextView
        android:id="@+id/video_error_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/video_view_no_net"
        android:textColor="#ffffff"
        android:textSize="14sp" />
    <RelativeLayout
        android:id="@+id/rl_record"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/video_error_selector"
        android:layout_centerInParent="true"
        android:gravity="center"

        >
        <TextView
            android:id="@+id/video_tv_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/video_view_retry"
            android:textColor="#78c4ff"

            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>