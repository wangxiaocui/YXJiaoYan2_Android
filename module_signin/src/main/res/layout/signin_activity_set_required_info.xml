<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            style="@style/LargeTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="40dp"
            android:text="个人资料" />

        <com.yanxiu.gphone.jiaoyan.module.signin.customize.CustomizeItemLayout
            android:id="@+id/item_diqu"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp" />

        <com.yanxiu.gphone.jiaoyan.module.signin.customize.CustomizeItemLayout
            android:id="@+id/item_xueduan_xueke"
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_style_001_bg_selector"
            android:enabled="false"
            android:text="下一步"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/text_size_20dp" />
    </LinearLayout>
</ScrollView>